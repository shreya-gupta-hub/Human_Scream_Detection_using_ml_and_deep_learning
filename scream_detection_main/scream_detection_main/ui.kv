<FileLoader>:
    filechooser: filechooser

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        canvas.before:
            Color:
                rgba : 0,0,0,0
            Rectangle:
                pos: self.pos
                size:self.size
        FileChooserListView:

            id: filechooser
            path : '/'
            multiselect: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release:app.fileloaderscreen_to_internalstoragescreen()

            Button:
                text: "Load"
                on_release: app.loadfile(filechooser.path, filechooser.selection)
<HelpWindow>:
    BoxLayout:
        Screen:

            NavigationLayout:

                ScreenManager:

                    Screen:                 ###### main screen on this window

                        BoxLayout:
                            orientation: 'vertical'

                            MDToolbar:
                                title: "Help"

                                elevation: 10

                                right_action_items: [["keyboard-backspace", lambda x: app.backforcommonscreens()]]
                            BoxLayout:
                                size_hint:(1,0.3)
                            BoxLayout:
                                BoxLayout:
                                    size_hint:(0.2,1)
                                BoxLayout:
                                    BoxLayout:

                                        radius:[50]
                                        orientation: "vertical"
                                        padding:20
                                        canvas.before:
                                            Color:

                                                rgba :  rgba("#008080")
                                            RoundedRectangle:

                                                pos: self.pos
                                                size:self.size
                                        MDLabel:
                                            text_size: self.size
                                            halign: 'justify'
                                            valign:'top'
                                            markup: True
                                            text:"[font=first][size=30][color=#6EC6BA]* This application is for detecting human cry and scream in audio files.[/font][/size][/color]"
                                        MDLabel:
                                            text_size: self.size
                                            halign: 'justify'
                                            valign:'top'
                                            markup: True
                                            text:"[font=first][size=30][color=#6EC6BA]* You can only process .wav files using this application[/font][/size][/color]"
                                        MDLabel:
                                            text_size: self.size
                                            halign: 'justify'
                                            valign:'top'
                                            markup: True
                                            text:"[font=first][size=30][color=#6EC6BA]* After clicking on process button please wait for sometime because in that time interval wave file will be being processed![/font][/size][/color]"
                                        MDLabel:
                                            text_size: self.size
                                            halign: 'justify'
                                            valign:'top'
                                            markup: True
                                            text:"[font=first][size=30][color=#6EC6BA]* You can pass recorded sound or you can record a 10 second sound through this app.[/font][/size][/color]"




                                BoxLayout:
                                    size_hint:(0.2,1)
                            BoxLayout:
                                size_hint:(1,0.3)


