<MainWindow>:

    BoxLayout:
        Screen:

            NavigationLayout:

                ScreenManager:

                    Screen:                 ###### main screen on this window

                        BoxLayout:
                            orientation: 'vertical'

                            MDToolbar:
                                title: "Big Data App"
                                elevation: 10
                                left_action_items: [['menu', lambda x: nav_drawer.set_state()]]
                                right_action_items: [["alert-decagram", lambda x: app.show_alert_dialog()]]
                            BoxLayout:
                                size_hint:(1,0.3)
                            BoxLayout:
                                BoxLayout:
                                BoxLayout:
                                    MDCard:
                                        orientation: "vertical"
                                        focus_behavior: True

                                        BoxLayout:
                                            spacing:-150
                                            orientation:"vertical"
                                            BoxLayout:
                                                padding:90
                                                ImageButton:
                                                    source:"resources/icons/microphone.png"
                                                    on_release:app.mainscreen_to_recscreen()
                                            BoxLayout:
                                                size_hint:(1,0.4)
                                                MDLabel:
                                                    text_size: self.size
                                                    halign: 'center'
                                                    valign:'top'



                                                    text:"Record Audio"

                                BoxLayout:
                                BoxLayout:

                                    MDCard:
                                        orientation: "vertical"
                                        focus_behavior: True

                                        BoxLayout:
                                            spacing:-150
                                            orientation:"vertical"
                                            BoxLayout:
                                                padding:90
                                                ImageButton:
                                                    source:"resources/icons/database.png"
                                                    on_release:app.mainscreen_to_internalstoragescreen()
                                            BoxLayout:
                                                size_hint:(1,0.4)
                                                MDLabel:
                                                    text_size: self.size
                                                    halign: 'center'
                                                    valign:'top'



                                                    text:"Add From Storage"




                                BoxLayout:
                            BoxLayout:
                                size_hint:(1,0.3)


                MDNavigationDrawer:

                    id: nav_drawer
                    type: "standard"
                    ContentNavigationDrawer:
                        BoxLayout:
                            orientation:"vertical"
                            BoxLayout:
                                orientation:"vertical"
                                MDToolbar:
                                    title: "                    Options"

                                    elevation: 10
                                Widget:
                            BoxLayout:
                                orientation:"vertical"
                                MDCard:
                                    elevation:0
                                    focus_behavior: True
                                    MDFlatButton:
                                        size_hint:(1,1)
                                        text: "[color=#fa5b3d]help[/color]"
                                        markup:True
                                        on_release:app.mainscreen_to_helpscreen()
                                        pos_hint: {"center_x": .5, "center_y": .5}



                                MDCard:
                                    elevation:0
                                    focus_behavior: True
                                    MDFlatButton:
                                        size_hint:(1,1)
                                        text: "[color=#fa5b3d]team[/color]"
                                        markup:True
                                        on_release:app.mainscreen_to_teamscreen()
                                        pos_hint: {"center_x": .5, "center_y": .5}




                            BoxLayout:
                                BoxLayout:
                                BoxLayout:
                                    MDChip:
                                        label: 'v1.0'
                                        pos_hint: {"center_x": .5, "center_y": .5}

                                        icon:"sticker-check"
                                BoxLayout:
<PopupWarning>:
    label_of_emergency: label_of_emergency
    BoxLayout:
        orientation:"vertical"
        Label:
            id: label_of_emergency
            text: ""
            markup: True
            size_hint: 0.6, 0.2
            pos_hint: {"center_x": .5, "center_y": .5}

        Button:
            text: "cancel"
            size_hint: 0.3, 0.04
            on_press:app.close_popup()
            pos_hint: {"center_x": .5, "center_y": .5}

        Button:
            text:"ok"
            size_hint: 0.3, 0.04
            on_press:app.close_popup()
            pos_hint: {"center_x": .5, "center_y": .5}
